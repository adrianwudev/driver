-- https://pjchender.dev/database/psql-roles-privilege/

CREATE DATABASE driver;
GRANT ALL PRIVILEGES ON DATABASE driver TO devs;
ALTER DEFAULT PRIVILEGES FOR ROLE devs GRANT ALL PRIVILEGES ON TABLES TO devs;


GRANT CREATE ON SCHEMA public TO devs;
GRANT ALL ON  ALL TABLES IN SCHEMA public TO  devs;
GRANT SELECT, INSERT, UPDATE, DELETE ON ALL TABLES IN SCHEMA public TO devs;
GRANT TRUNCATE, REFERENCES, TRIGGER ON ALL TABLES IN SCHEMA public TO devs;
